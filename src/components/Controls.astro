---
import { Image } from "astro:assets";
import yes from "../assets/add.png";
import no from "../assets/no.png";
import refresh from "../assets/refresh.png";
---

<div class="controls">
  <div class="add">
    <Image src={yes} alt="yes" class="imgFit" />
  </div>

  <div class="delete">
    <Image src={no} alt="no" class="imgFit" />
  </div>

  <div class="refresh">
    <Image src={refresh} alt="refresh" class="imgFit" />
  </div>
</div>

<style>
  .controls {
    display: flex;
    justify-content: center;
    text-align: center;
    gap: 30px;
  }

  .add,
  .delete,
  .refresh {
    display: flex;
    background-color: #171717;
    max-width: 20px;
    width: 100%;
    max-height: 20px;
    height: 100%;
    padding: 8px;
    border-radius: 0.7em;

    box-shadow:
      0 0 5px white,
      0 0 5px white,
      0 0 5px white,
      0 0 5px white;
  }

  .imgFit {
    width: 100%;
    height: 100%;
  }
</style>
