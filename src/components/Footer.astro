---
import { Image } from "astro:assets";
import github from "../assets/github.png";
import discord from "../assets/discord.png";
import linkedin from "../assets/linkedin.png";
import instagram from "../assets/instagram.png";
---

<div class="contacts">
  <div class="git"><Image src={github} alt="" class="imgFit" /></div>
  <div class="ig"><Image src={instagram} alt="" class="imgFit" /></div>
  <div class="link"><Image src={linkedin} alt="" class="imgFit" /></div>
</div>
<span>Made by @scrxtch <br />Â© 2024</span>

<style>
  span {
    display: flex;
    justify-content: center;
    text-align: center;
    padding: 5px;
    font-size: small;
  }
  .contacts {
    display: flex;
    justify-content: center;
    text-align: center;
    gap: 15px;
  }

  .git,
  .link,
  .ig {
    background-color: #171717;
    max-width: 20px;
    width: 100%;
    max-height: 20px;
    height: 100%;
    padding: 6px;
    border-radius: 0.7em;
    border-style: solid;
    border-color: #171717;
  }

  .git:hover {
    border-style: solid;
    border-color: rgb(51, 51, 51);
  }

  .link:hover {
    border-style: solid;
    border-color: rgb(51, 51, 51);
  }

  .ig:hover {
    border-style: solid;
    border-color: rgb(51, 51, 51);
  }

  .imgFit {
    width: 100%;
    height: 100%;
  }
</style>
