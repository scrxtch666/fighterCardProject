---
const { showCase } = Astro.props;
import { Image } from "astro:assets";
import yes from "../assets/yes.png";
import no from "../assets/no.png";
import refresh from "../assets/refresh.png";
---

<div class="card">
  <div class="mainCase">
    <div class="imgPart">
      <div class="formCase">
        <form action="/action_page.php">
          <label for="img">Profile pic</label>
          <input type="file" id="img" name="img" accept="image/*" />
          <input type="submit" />
        </form>
      </div>
      <!-- 
      <Image src={showCase.image} alt="" />
      -->
    </div>
    <div class="textPart">
      <div class="name">
        <div class="nickName">
          <input type="text" />
          <br />
          <span class="belt">
            <select name="Belt" id="">
              <option value="White">White</option>
              <option value="Yellow">Yellow</option>
              <option value="Green">Green</option>
              <option value="Blue">Blue</option>
              <option value="Red">Red</option>
              <option value="Black">Black</option>
            </select>
            belt</span
          >
        </div>
      </div>
      <div class="stats">
        <!--Age stat -->
        <div class="age">
          <input
            type="number"
            placeholder="Age"
            style="width: 60px;"
            required
          />
          <br />
          <span>Age</span>
        </div>
        <!--Weight stat -->
        <div class="weight">
          <input
            type="number"
            placeholder="Weight"
            style="width: 60px;"
            required
          /> kg <br />
          <span>Weight</span>
        </div>
        <!--Height stat -->
        <div class="height">
          <input
            type="number"
            placeholder="Height"
            style="width: 60px;"
            required
          /> cm <br />
          <span>Height</span>
        </div>
      </div>
      <div class="bio">
        <textarea
          name="bio"
          id=""
          placeholder="Describe yourself to us..."
          required></textarea>
      </div>
    </div>
  </div>

  <div class="controls">
    <button class="con">
      <a href="../action/AllStats">
        <Image src={yes} alt="yes" class="imgFit" />
      </a>
    </button>

    <button class="con">
      <a href="../fighterCard">
        <Image src={no} alt="no" class="imgFit" />
      </a>
    </button>

    <button class="con">
      <a href="../action/AddFighter">
        <Image src={refresh} alt="refresh" class="imgFit" />
      </a>
    </button>
  </div>
  <!--Pauza -->

  <style>
    .card {
      display: flex;
      flex-direction: column;
      gap: 50px;
    }
    .mainCase {
      border-style: solid;
      border-color: black;
      display: flex;
      gap: 25px;
      border-radius: 0.8em;
      height: 300px;
      max-width: 550px;
      width: 100%;
      padding: 25px;
      font-family: monospace;
      font-size: large;
      /* Původní
    background-color: black;
    */
      background-color: #171717;
      border-color: #171717;

      box-shadow:
        0 0 15px goldenrod,
        0 0 15px goldenrod,
        0 0 15px goldenrod,
        0 0 15px goldenrod;
    }

    .mainCase:hover {
      box-shadow:
        0 0 5px goldenrod,
        0 0 25px goldenrod,
        0 0 50px goldenrod,
        0 0 100px goldenrod;
    }
    .imgPart {
      display: flex;
      justify-content: center;
      text-align: center;
      width: 200px;
      border-style: dotted;
      border-color: goldenrod;
      border-radius: 0.9em;
    }

    .imgPart img {
      border-radius: 0.8em;
      max-width: 100%; /* Obrázek se přizpůsobí šířce divu */
      height: auto; /* Necháme výšku obrázku automaticky podle jeho šířky */
    }

    .textPart {
      display: flex;
      justify-content: space-between;
      flex-direction: column;
      width: 350px;
    }

    .nickName,
    .stats,
    .bio {
    }

    .stats {
      display: flex;
      justify-content: space-between;
    }

    span {
      color: goldenrod;
    }

    input,
    textarea {
      background-color: #171717;
      border-color: goldenrod;
      border-radius: 0.7em;
      color: whitesmoke;
      font-family: monospace;
      width: 100px;
    }

    textarea {
      max-width: 350px;
      width: 100%;
      max-height: 150px;
      height: 100%;
      min-width: 150px;
      min-height: 100px;
    }

    .controls {
      display: flex;
      justify-content: center;
      text-align: center;
      gap: 30px;
    }

    .conCase {
      display: flex;
      text-align: center;
      justify-content: center;
      width: 150px;
      height: 70px;
      background-color: #171717;
      border-radius: 0.9em;
      font-size: small;
    }

    .add,
    .delete,
    .refresh {
      display: flex;
      background-color: #171717;
      max-width: 20px;
      width: 100%;
      max-height: 20px;
      height: 100%;
      padding: 8px;
      border-radius: 0.7em;

      box-shadow:
        0 0 5px white,
        0 0 5px white,
        0 0 5px white,
        0 0 5px white;
    }

    .imgFit {
      width: 100%;
      height: 100%;
    }

    select {
      background-color: #171717;
      color: gray;
      border-color: goldenrod;
      border-radius: 0.7em;
    }

    form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
      gap: 5px;
    }

    .formCase {
      display: flex;
    }

    .con {
      display: flex;
      background-color: #171717;
      max-width: 40px;
      width: 100%;
      max-height: 40px;
      height: 100%;
      padding: 8px;
      border-radius: 0.7em;

      box-shadow:
        0 0 5px white,
        0 0 5px white,
        0 0 5px white,
        0 0 5px white;
    }

    .con:hover {
      box-shadow:
        0 0 15px white,
        0 0 15px white,
        0 0 15px white,
        0 0 15px white;
    }
  </style>
</div>
